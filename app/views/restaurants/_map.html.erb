  <!-- Form: text_field + hidden field, send to ?? -->
  <%= form_tag 'restaurant#index', method: "get" do %>
    <%= label_tag('query', "Search for:") %>
    <%= text_field_tag 'query', nil, placeholder: "Start typing a restaurant...", 'data-behavior': :autocomplete %>
    <%= submit_tag "Search", class: "btn btn-primary" %>
  <% end %>
  <br>
  <br>
  <br>
  <% javascript_include_tag "restaurants_to_map" %>
  <%= content_tag :div , id: "coordinates-div", data: {coordinates: @restaurants} do %>
  <% end %>
  <div id="map"></div>
</div>
</div>
